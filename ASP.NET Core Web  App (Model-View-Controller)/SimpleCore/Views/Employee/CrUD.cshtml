@model SimpleCore.Models.ViewModels.EmployeeModel

@{
    ViewData["Title"] = "Crud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@Model.Title</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form method="post">

            <div class="form-group" hidden>
                <input asp-for="Employee.EmployeeId" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Employee.Name" class="control-label"></label>
                <input asp-for="Employee.Name" class="form-control" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Employee.Surname" class="control-label"></label>
                <input asp-for="Employee.Surname" class="form-control" />
                <span asp-validation-for="Employee.Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select name="Employee.CityId" class="form-control">
                    @foreach (var item in Model.CityList)
                    {
                        if (item.CityId == Model.Employee.CityId)
                        {
                            <option selected style="color:red" name="Personel.CityId" value="@item.CityId">@item.CityName</option>
                        }
                        else
                        {
                            <option name="Personel.CityId" value="@item.CityId">@item.CityName</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="@Model.BtnVal" class="@Model.BtnClass" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
