@model IEnumerable<BasicRepositorySoftDelete.Models.DTOs.EmployeeDTO>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Number (Id)
            </th>
            <th>
                Employee's Name
            </th>
            <th>
                Employee's Surname
            </th>
            <th>
                From
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
   @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.EmpName
            </td>
            <td>
                @item.EmpSurname
            </td>
            <td>
                @item.CityName
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
