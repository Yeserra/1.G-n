@model CodeFirst_EF.Models.ViewModels.CityModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>@Model.Title</h2>

<div class="row">
    <div class="col-md-5">
        <form method="post">

            <input class="form-control" type="@Model.Type" name="CityId" value="@Model.City.CityId" />
            <br />

            <label>City Name</label>
            <input class="form-control" type="text" name="CityName" value="@Model.City.CityName" />
            <br />

            <input class="@Model.BtnClass" type="submit" value="@Model.BtnVal" />

            <input class="btn btn-warning" type="submit" value="Cancel" formaction="/City/List"/>
            <br />

        </form>
    </div>
</div>
