@model List<CodeFirst_EF.Models.Data.City>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Cities</h2>

<div class="row">
    <div class="col-md-7">

        <br />
        <div class="alert alert-warning" role="alert">
            @Session["Error"]
        </div>
        <br />

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>City Number (Id)</th>
                    <th>City Name</th>
                    <th>Delete</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CityId</td>
                        <td>@item.CityName</td>
                        <td><a class="btn btn-danger" href="/City/Delete/@item.CityId">Delete</a></td>
                        <td><a class="btn btn-success" href="/City/Update/@item.CityId">Update</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <br />

        <form>
            <input class="btn btn-primary" type="submit" value="New" formaction="/City/Create" />
        </form>

    </div>
</div>

